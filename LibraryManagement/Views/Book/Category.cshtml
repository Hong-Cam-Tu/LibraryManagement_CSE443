
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div id="header-detail">
        <div class="line-container">
            <div class="line"></div>
            <div class="text">
                <center>
                    <h2>Danh sách các loại sách</h2>
                </center>
            </div>
            <div class="line"></div>
        </div>
    </div>
    
    <ul>
        <div class="row" , style="padding-left: 200px">
            @foreach (var book in ViewBag.Book)
            {
                <div class="card" style="width: 18rem;padding-left: 12px">
                    <img src="@book.Avatar" class="card-img-top" class="card-img-top" style="padding-top:10px; height:370.56px" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text"><b>Mô tả:</b> @book.Description</p>
                        <p><b>Mã sách:</b> @book.BookCode</p>
                        <a asp-controller="Book" asp-action="BookDetail" asp-route-id="@book.BookId" class=" btn btn-success">Thông tin chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </ul>
</body>
</html>